{
  "extends": "./tsconfig.app.json",
  "include": [
    "src/**/*",
    "modules/*"
  ],
  "exclude": [
    "node_modules",
    "build/**/*"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "noImplicitAny": false,
    "composite": true,
    "outDir": "src",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ScriptHost", "ESNext.AsyncIterable", "WebWorker"],
    "types": [
      "node",
      "jsdom",
      "vite/client"
    ]
  }
}